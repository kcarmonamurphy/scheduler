{% extends 'base.html.twig' %}
{% block body %}

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Scheduler</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
		<li class="glyphicon-container glyphicon-container-red active"><a href="#"><span class="glyphicon glyphicon-plus glyphicon-red"></span></a></li>
        <li class="glyphicon-container glyphicon-container-amber"><a href="#"><span class="glyphicon glyphicon-plus glyphicon-amber"></span></a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Options<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">30 minute intervals</a></li>
            <li><a href="#">1 hour intervals</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Show weekend</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Start/end day</a></li>
          </ul>
        </li>
      </ul>
		
      <form class="navbar-form navbar-right">
        <div class="form-group">
          <input type="text" class="form-control meeting-name" placeholder="Meeting Name">
        </div>
        <button type="submit" class="btn btn-primary">Share with Invitees</button>
      </form>
		
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<table id="table" class="noselect">
	<tr class="days-of-week">
		<th>SCHED</th>
		{% for day in daysOfWeek %}
			<th class="day">{{ day }}</th>
		{% endfor %}
	</tr>
	{% for time in timeSlots %}
	<tr>
		<td class="time-slot noselect">{{ time }}</td>
		{% for day in daysOfWeek %}
			<td class="d#{{loop.index}}_ts#{{loop.parent.loop.index}} time-cell"></td>
		{% endfor %}
	</tr>
	{% endfor %}
</table>
{% endblock %}