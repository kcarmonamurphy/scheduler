$(document).ready(function() {
	
	var mouseDown = false;
	document.body.onmousedown = function() { 
	  mouseDown = true;
	}
	document.body.onmouseup = function() {
	  mouseDown = false;
	}
	
	$(".time-cell").hover(paintCell(this));
	$(".time-cell").click(paintCell(this));
	

	
	
});

function paintCell(this) {
	$(this).css( 'cursor', 'pointer' );
	if(mouseDown){
	  $(this).addClass("green");
	}
}